{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node"],
    "noEmit": false,
    "outDir": "./dist/main"
  },
  "include": [
    "src/main/**/*",
    "src/shared/**/*"
  ],
  "exclude": [
    "src/renderer/**/*",
    "src/types/global.d.ts",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}