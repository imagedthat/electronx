{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "noEmit": false,
    "outDir": "./dist/renderer"
  },
  "include": [
    "src/renderer/**/*",
    "src/shared/**/*",
    "src/types/global.d.ts"
  ],
  "exclude": [
    "src/main/**/*",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}